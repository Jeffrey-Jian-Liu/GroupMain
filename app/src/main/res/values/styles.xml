<resources>

    <style name="main_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/main_colorPrimaryLight</item>
        <item name="android:colorPrimaryDark">@color/main_colorPrimaryDark</item>
        <item name="android:colorAccent">@color/main_colorAccent</item>
        <item name="android:navigationBarColor">@color/main_colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/main_colorPrimaryDark</item>
    </style>

    <style name="main_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/main_colorPrimaryLight</item>
    </style>

    <style name="main_ToolBarTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_colorPrimary</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/main_FontSizeMiddle</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="main_ToolBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_colorPrimary</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/main_FontSizeMiddle</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
